<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
            android:id="@+id/top"
            android:layout_below="@id/my_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="請填寫你的電子郵件"
            android:layout_centerHorizontal="true"
            android:textColorHint="#333"
            android:textSize="15dp"/>

    <View
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/textbox"
        android:layout_alignTop="@id/inputlayout2"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputlayout2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/top"
        >
        <EditText
            android:id="@+id/fgemail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:paddingLeft="32dp"
            android:hint="電子郵件"
            android:textSize="15dp"
            android:background="#0000"
            android:maxLines="1"
            android:inputType="textEmailAddress"/>
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/textbox"
        android:layout_alignTop="@id/inputpw"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputpw"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/inputlayout2"
        app:passwordToggleEnabled="true"
        >
        <EditText
            android:id="@+id/pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingRight="12dp"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_lock"
            android:drawableStart="@drawable/ic_lock"
            android:drawableTint="@color/dark_grey"
            android:hint="密碼"
            android:textSize="15dp"
            android:background="#0000"
            android:maxLines="1"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>
    <View
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/textbox"
        android:layout_alignTop="@id/inputpw1"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputpw1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/inputpw"
        app:passwordToggleEnabled="true"
        >
        <EditText
            android:id="@+id/pw1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingRight="12dp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawableStart="@drawable/ic_lock"
            android:drawableTint="@color/dark_grey"
            android:hint="確認密碼"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:background="#0000"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/next"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/inputpw1"
        android:text="發送驗證郵件"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:backgroundTint="@color/base"
        android:background="@drawable/textbox"/>

</RelativeLayout>