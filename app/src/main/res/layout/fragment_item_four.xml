<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mmc"
        android:layout_marginTop="40dp"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputlayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:backgroundTint="@color/base"
        >

        <EditText
            android:id="@+id/loginphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_note"
            android:drawableStart="@drawable/ic_note"
            android:hint="註冊電話號碼"
            android:textSize="20dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputpw"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/inputlayout"
        app:passwordToggleEnabled="true"
        >
        <EditText
            android:id="@+id/pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_lock"
            android:drawableStart="@drawable/ic_lock"
            android:drawableTint="@color/dark_grey"
            android:hint="密碼"
            android:textSize="20dp"

            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/inputpw"
        android:text="登入"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:backgroundTint="@color/base"
        android:background="@drawable/border"/>

    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/login"
        android:layout_centerHorizontal="true"
        android:onClick="clickToast"
        android:text="按此註冊新用戶"
        android:textColor="@color/base"
        />

    <TextView
        android:id="@+id/forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/reg"
        android:layout_centerHorizontal="true"
        android:text="忘記密碼?"
        android:textColor="@color/base"
        />

    <View
        android:id="@+id/hline"
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/forget"
        android:background="@color/base"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/fb"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/hline"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_facebook"
        android:text="Facebook登入"
        android:textColor="#fff"
        android:paddingLeft="20dp"
        android:background="#3070bf"
        />
    <Button
        android:id="@+id/goo"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/fb"
        android:layout_centerHorizontal="true"
        android:background="#cc4b30"
        android:drawableLeft="@drawable/ic_google"
        android:paddingLeft="20dp"
        android:text="Google登入"

        android:textColor="#fff"
        />

</RelativeLayout>